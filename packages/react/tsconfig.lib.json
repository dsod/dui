{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"types": ["vite/client"]
	},
	"include": ["src/**/*"],
	"exclude": [
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.stories.ts",
		"src/**/*.stories.js",
		"src/**/*.stories.jsx",
		"src/**/*.stories.tsx"
	]
}
