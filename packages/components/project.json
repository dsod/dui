{
	"name": "components",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/components/src",
	"projectType": "library",
	"targets": {
		"prepare-build": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "packages/components",
				"command": "pnpm panda codegen"
			},
			"inputs": ["{projectRoot}/src/styled-system/**/*.{jsm,ts,tsx}"],
			"outputs": ["{projectRoot}/src/styled-system/**/*.{jsm,ts,tsx}"]
		},
		"build": {
			"executor": "nx:run-commands",
			"dependsOn": ["prepare-build"],
			"options": {
				"cwd": "packages/components",
				"commands": [
					"pnpm mitosis --config=mitosis.react.config.js build",
					"pnpm mitosis --config=mitosis.solidjs.config.js build",
					"pnpm mitosis --config=mitosis.qwik.config.js build"
				]
			},
			"inputs": ["{projectRoot}/src/**/*.{js,ts,tsx}"],
			"outputs": [
				"{workspaceRoot}/packages/react/src/components",
				"{workspaceRoot}/packages/solid/src/components",
				"{workspaceRoot}/packages/qwik/src/components"
			]
		}
	},
	"tags": []
}
